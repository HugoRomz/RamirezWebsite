---
// src/pages/[slug].astro
import { services } from '../../data/servicesData';
import Layout from '../../layouts/Layout.astro';
import TitlePage from '../../components/TitlePage.astro';

export async function getStaticPaths() {
  return services.map((service) => ({
    params: { slug: service.slug },
    props: { service },
  }));
}

const { slug } = Astro.params;
const servicio = services.find((serv) => serv.slug === slug);

if (!servicio) {
  throw new Error(`Servicio no encontrado: ${slug}`);
}
---

<Layout title=`${servicio.title} | Ramírez Window Cleaning | Expert Window Cleaning & Pressure Washing in Florida`>
    <TitlePage title={servicio.title}/>
    <div class="max-w-7xl mx-auto">

        <div class="flex flex-row max-w-7xl mx-auto md:p-0 p-5">
            <div class="flex md:flex-row flex-wrap h-auto">
                <div class="w-full md:w-2/5 text-center text-gray-700">
                    <div class="flex-1 animate-fade-left p-2 md:p-0">
                        <img
                        src={servicio.imageUrl}
                        alt="Image page"
                        class="w-full h-[550px] rounded-lg object-cover"
                        />
                        <hr class="w-full h-1 my-4 bg-[#0C2461] border-0 rounded md:mb-5" />
                        <!-- Why Us -->
                        <div class="container mx-auto max-w-5xl flex gap-12 flex-wrap items-start justify-center md:justify-between mt-5 text-gray-800 text-sm">
                            <div class="grid gap-4 justify-items-center text-center md:flex-1 ">
                                <div class="rounded-full border-8 border-[#0C2461] p-4">
                            <svg
                            version="1.1"
                            class="w-10 h-10"
                            id="Uploaded to svgrepo.com"
                            xmlns="http://www.w3.org/2000/svg"
                            xmlns:xlink="http://www.w3.org/1999/xlink"
                            viewBox="0 0 32 32"
                            xml:space="preserve"
                            >
                            <path
                            class="w-10 h-10"
                            d="M16,4c-4.963,0-9,4.038-9,9c0,3.186,1.781,5.278,3.212,6.959C11.172,21.085,12,22.059,12,23v5h3
                            v1h2v-1h3v-5c0-0.941,0.828-1.915,1.788-3.041C23.219,18.278,25,16.186,25,13C25,8.038,20.963,4,16,4z M18,26h-4v-2h4V26z
                            M20.265,18.662c-0.923,1.084-1.805,2.12-2.132,3.338h-4.266c-0.327-1.218-1.209-2.254-2.132-3.338C10.391,17.083,9,15.45,9,13
                            c0-3.86,3.141-7,7-7s7,3.14,7,7C23,15.45,21.609,17.083,20.265,18.662z M16,7v2c-2.206,0-4,1.794-4,4h-2C10,9.691,12.691,7,16,7z"
                            ></path>
                            </svg>
                        </div>
                        <h3 class="text-xl font-bold">Innovative Solutions</h3>
                        <p>
                            Advanced cleaning techniques for impeccable, lasting results by Ramírez
                            Window Cleaning.
                        </p>
                    </div>
                    
                    <div class="grid gap-4 justify-items-center text-center md:flex-1">
                        <div class="rounded-full border-8 border-[#0C2461] p-4">
                            <svg
                            xmlns="http://www.w3.org/2000/svg"
                            fill="none"
                            viewBox="0 0 24 24"
                            stroke-width="1.5"
                            stroke="currentColor"
                            class="w-10 h-10"
                            >
                            <path
                            d="M8 10V20M8 10L4 9.99998V20L8 20M8 10L13.1956 3.93847C13.6886 3.3633 14.4642 3.11604 15.1992 3.29977L15.2467 3.31166C16.5885 3.64711 17.1929 5.21057 16.4258 6.36135L14 9.99998H18.5604C19.8225 9.99998 20.7691 11.1546 20.5216 12.3922L19.3216 18.3922C19.1346 19.3271 18.3138 20 17.3604 20L8 20"
                            stroke="#000000"
                            stroke-width="1.5"
                            stroke-linecap="round"
                            stroke-linejoin="round"
                            ></path>
                        </svg>
                    </div>
                    <h3 class="text-xl font-bold">Best Practices</h3>
                    <p>Excellence in quality services at competitive prices.</p>
                </div>
                <div class="grid gap-4 justify-items-center text-center md:flex-1">
                    <div class="rounded-full border-8 border-[#0C2461] p-4">
                        <svg
                        xmlns="http://www.w3.org/2000/svg"
                        fill="none"
                        viewBox="0 0 24 24"
                        stroke-width="1.5"
                        stroke="currentColor"
                        class="w-10 h-10"
                        >
                        <path
                        stroke-linecap="round"
                        stroke-linejoin="round"
                        d="M3.75 13.5l10.5-11.25L12 10.5h8.25L9.75 21.75 12 13.5H3.75z"
                        ></path>
                            </svg>
                        </div>
                        <h3 class="text-xl font-bold">Personalized Service</h3>
                        <p>Customized, efficient services ensuring complete client satisfaction.</p>
                    </div>
                        </div>;
                        <!--End Why Us  -->
                <hr class="w-full h-1 my-4 bg-[#0C2461] border-0 rounded md:mb-5" />
            </div>
        </div>
        <div class="w-full md:w-3/5 text-gray-200">
            <div class="flex-1 md:pr-32 md:pl-16 px-2">
                <div class="text-gray-900 mb-4 tracking-wider leading-8 animate-fade-right">
                    {servicio.description.split('\n\n').map((parrafo) => (
                        <p class="text-pretty">{parrafo}</p>
                    ))}
                </div> 
                <a
                href="/gallery"
                class="inline-flex items-center px-4 py-3 text-sm font-medium text-center text-white bg-primary rounded-lg hover:bg-blue-900 focus:outline-none focus:ring-4 hover:scale-105 "
              >
                View gallery
                <svg
                  class="rtl:rotate-180 w-3.5 h-3.5 ms-2"
                  aria-hidden="true"
                  fill="none"
                  viewBox="0 0 14 10"
                >
                  <path
                    stroke="currentColor"
                    stroke-linecap="round"
                    stroke-linejoin="round"
                    stroke-width="2"
                    d="M1 5h12m0 0L9 1m4 4L9 9"></path>
                </svg>
              </a>
            </div>
        </div>
    </div>
</div>
    
</div>
</Layout>
