---
const { category, title, description, imageUrl, UrlRef  } = Astro.props
---

<!-- Card -->
<div class="group flex flex-col h-full bg-white border border-gray-200 shadow-md rounded-xl overflow-hidden hover:shadow-xl focus:outline-none focus:shadow-lg transition ">
    <div class="h-56 flex flex-col justify-center items-center bg-primary rounded-t-xl">
      <img src={imageUrl} alt={description} class="size-full object-cover group-hover:scale-105 group-focus:scale-105 transition-transform duration-500 ease-in-out rounded-t-xl" />
    </div>
    <div class="p-4 md:p-6">
      <span class="block mb-1 text-xs font-semibold uppercase text-blue-600 ">
        {category}
      </span>
      <h3 class="text-xl font-semibold text-gray-800 ">
        {title}
      </h3>
      <p class="mt-3 text-gray-500 line-clamp-3">
        {description}
      </p>
    </div>
    <div class="mt-auto flex border-t border-gray-200 divide-x divide-gray-200 ">
        <div class="p-5 text-center mx-auto">
            <a
              href={UrlRef}
              class="inline-flex items-center px-3 py-2 text-sm font-medium text-center text-white bg-primary rounded-lg hover:bg-blue-900 focus:outline-none focus:ring-4 group-hover:scale-105"
            >
              Read more
              <svg
                class="rtl:rotate-180 w-3.5 h-3.5 ms-2"
                aria-hidden="true"
                fill="none"
                viewBox="0 0 14 10"
              >
                <path
                  stroke="currentColor"
                  stroke-linecap="round"
                  stroke-linejoin="round"
                  stroke-width="2"
                  d="M1 5h12m0 0L9 1m4 4L9 9"></path>
              </svg>
            </a>
          </div>
    </div>
  </div>